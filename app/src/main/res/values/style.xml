<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearLayout_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="master_LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">@dimen/master_linearPadding</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="editText_result">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/editTextResult_bottoms</item>
        <item name="android:backgroundTint">@color/editTextTint_backColor</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/editText_size</item>
        <item name="android:background">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">false</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="buttons_operation">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_weight">@dimen/button_weight</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/distanceButtons</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:theme">@style/buttons_operation_theme</item>
    </style>

    <style name="linearHome_master">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="buttons_number">
        <item name="cornerRadius">@dimen/radius_button</item>
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_weight">@dimen/button_weight</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/distanceButtons</item>
        <item name="android:fontFamily">@font/allan</item>
    </style>

    <style name="button_clearForOne" parent="buttons_operation">
        <item name="icon">@android:drawable/ic_input_delete</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/iconPadding</item>
        <item name="iconSize">@dimen/iconSize</item>
        <item name="iconTint">@color/white</item>
        <item name="android:fontFamily">@font/allan</item>
    </style>

    <style name="Buttons_zero">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_weight">@dimen/buttonZero_weight</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/distanceButtons</item>
        <item name="cornerRadius">@dimen/radius_button</item>
        <item name="android:fontFamily">@font/allan</item>
    </style>


    <!--    orientation land    -->

    <style name="editText_result_land">
        <item name="android:layout_marginBottom">@dimen/editTextResult_bottoms_land</item>
    </style>

    <style name="master_LinearLayout_land" parent="master_LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">@dimen/master_linearHorizont</item>
    </style>
</resources>